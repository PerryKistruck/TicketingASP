{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/TicketingASP.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/TicketingASP.Tests/TicketingASP.Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/TicketingASP.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/TicketingASP.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/TicketingASP.Tests/TicketingASP.Tests.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "playwright-install",
      "type": "shell",
      "command": "npm install && npx playwright install",
      "options": {
        "cwd": "${workspaceFolder}/playwright-tests"
      }
    },
    {
      "label": "playwright-test",
      "type": "shell",
      "command": "npx playwright test",
      "options": {
        "cwd": "${workspaceFolder}/playwright-tests"
      },
      "group": "test"
    },
    {
      "label": "playwright-test-ui",
      "type": "shell",
      "command": "npx playwright test --ui",
      "options": {
        "cwd": "${workspaceFolder}/playwright-tests"
      }
    },
    {
      "label": "wait-for-app",
      "type": "shell",
      "command": "Start-Sleep -Seconds 5",
      "windows": {
        "command": "Start-Sleep -Seconds 5"
      },
      "linux": {
        "command": "sleep 5"
      },
      "osx": {
        "command": "sleep 5"
      }
    }
  ]
}
