@using TicketingASP.Models.DTOs
@model UpdateTicketDto
@{
    var ticketId = ViewBag.TicketId as int?;
    var ticketNumber = ViewBag.TicketNumber as string;
    ViewData["Title"] = $"Edit Ticket {ticketNumber}";
    var lookups = ViewBag.Lookups as TicketFormLookupsDto;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tickets</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = ticketId })">@ticketNumber</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Edit Ticket: @ticketNumber</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit" asp-route-id="@ticketId">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">Select a category...</option>
                                    @if (lookups?.Categories != null)
                                    {
                                        @foreach (var category in lookups.Categories)
                                        {
                                            <optgroup label="@category.Name">
                                                @if (category.SubCategories?.Any() == true)
                                                {
                                                    @foreach (var sub in category.SubCategories)
                                                    {
                                                        <option value="@sub.Id" selected="@(Model.CategoryId == sub.Id)">@sub.Name</option>
                                                    }
                                                }
                                                else
                                                {
                                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                                                }
                                            </optgroup>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="PriorityId" class="form-label">Priority <span class="text-danger">*</span></label>
                                <select asp-for="PriorityId" class="form-select" required>
                                    @if (lookups?.Priorities != null)
                                    {
                                        @foreach (var priority in lookups.Priorities)
                                        {
                                            <option value="@priority.Id" selected="@(Model.PriorityId == priority.Id)">@priority.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="StatusId" class="form-label">Status <span class="text-danger">*</span></label>
                                <select asp-for="StatusId" class="form-select" required>
                                    @if (lookups?.Statuses != null)
                                    {
                                        @foreach (var status in lookups.Statuses)
                                        {
                                            <option value="@status.Id" selected="@(Model.StatusId == status.Id)">@status.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AssignedTeamId" class="form-label">Assign to Team</label>
                                <select asp-for="AssignedTeamId" class="form-select">
                                    <option value="">Select team...</option>
                                    @if (lookups?.Teams != null)
                                    {
                                        @foreach (var team in lookups.Teams)
                                        {
                                            <option value="@team.Id" selected="@(Model.AssignedTeamId == team.Id)">@team.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AssignedToId" class="form-label">Assign to Agent</label>
                                <select asp-for="AssignedToId" class="form-select">
                                    <option value="">Select agent...</option>
                                    @if (lookups?.Agents != null)
                                    {
                                        @foreach (var agent in lookups.Agents)
                                        {
                                            <option value="@agent.Id" selected="@(Model.AssignedToId == agent.Id)">@agent.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date</label>
                                <input asp-for="DueDate" type="datetime-local" class="form-control" 
                                       value="@(Model.DueDate?.ToString("yyyy-MM-ddTHH:mm"))" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Tags" class="form-label">Tags</label>
                                <input asp-for="Tags" class="form-control" placeholder="Comma-separated tags..." />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Details", new { id = ticketId })" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
