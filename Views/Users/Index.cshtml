@model TicketingASP.Models.Common.PagedResult<TicketingASP.Models.DTOs.UserListDto>
@{
    ViewData["Title"] = "Users";
    var search = ViewBag.Search as string;
    var isActive = ViewBag.IsActive as bool?;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3">Users</h1>
                <p class="text-muted">Manage system users and their roles</p>
            </div>
            <a href="@Url.Action("Create", "Users")" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Add User
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-5">
                            <label class="form-label">Search</label>
                            <input type="text" name="search" class="form-control" placeholder="Search by name or email..." value="@search" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select name="isActive" class="form-select">
                                <option value="">All Users</option>
                                <option value="true" selected="@(isActive == true)">Active Only</option>
                                <option value="false" selected="@(isActive == false)">Inactive Only</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search me-1"></i> Search
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">User List</h5>
                    <span class="badge bg-secondary">@Model?.TotalCount total</span>
                </div>
                <div class="card-body p-0">
                    @if (Model?.Items?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Roles</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2">
                                                        @(user.FirstName?.FirstOrDefault())@(user.LastName?.FirstOrDefault())
                                                    </div>
                                                    <div>
                                                        <strong>@user.DisplayName</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.Roles))
                                                {
                                                    @foreach (var role in user.Roles.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                                    {
                                                        <span class="badge bg-info me-1">@role.Trim()</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No roles</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.IsLocked)
                                                {
                                                    <span class="badge bg-danger">Locked</span>
                                                }
                                                else if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Details", new { id = user.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3">No users found</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">Add First User</a>
                        </div>
                    }
                </div>

                @if (Model?.TotalPages > 1)
                {
                    <div class="card-footer">
                        <nav aria-label="User pagination">
                            <ul class="pagination mb-0 justify-content-center">
                                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, search, isActive })">Previous</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.Page ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, search, isActive })">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, search, isActive })">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 36px;
        height: 36px;
        background-color: #6c757d;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        font-weight: 500;
    }
</style>
