@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body p-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-shield-exclamation" style="font-size: 4rem;"></i>
                    </div>
                    <h2>Access Denied</h2>
                    <p class="text-muted mb-4">You don't have permission to access this resource.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("Dashboard", "Reports")" class="btn btn-primary">Go to Dashboard</a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">Login as Different User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
