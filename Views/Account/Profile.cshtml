@model TicketingASP.Models.DTOs.UserDetailDto
@{
    ViewData["Title"] = "My Profile";
}

<div class="page-header">
    <h1><i class="bi bi-person-circle me-2"></i>My Profile</h1>
    <p class="text-muted">View and manage your account information</p>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl" alt="@Model.DisplayName" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 120px; height: 120px; font-size: 3rem;">
                        @Model.FirstName[0]@Model.LastName[0]
                    </div>
                }
                <h4 class="card-title mb-1">@Model.DisplayName</h4>
                <p class="text-muted mb-3">@Model.Email</p>
                
                @if (Model.Roles.Any())
                {
                    <div class="mb-3">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-primary me-1">@role.Name</span>
                        }
                    </div>
                }
                
                <div class="d-grid gap-2">
                    <a asp-action="EditProfile" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-1"></i>Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                        <i class="bi bi-key me-1"></i>Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Account Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Email</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">First Name</div>
                    <div class="col-sm-8">@Model.FirstName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Last Name</div>
                    <div class="col-sm-8">@Model.LastName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Phone</div>
                    <div class="col-sm-8">@(Model.Phone ?? "Not provided")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Account Status</div>
                    <div class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                        @if (Model.IsLocked)
                        {
                            <span class="badge bg-warning text-dark ms-1">Locked</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 text-muted">Last Login</div>
                    <div class="col-sm-8">@(Model.LastLoginAt?.ToString("g") ?? "Never")</div>
                </div>
                <div class="row">
                    <div class="col-sm-4 text-muted">Member Since</div>
                    <div class="col-sm-8">@Model.CreatedAt.ToString("D")</div>
                </div>
            </div>
        </div>

        @if (Model.Teams.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Teams</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var team in Model.Teams)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>@team.Name</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
