@using TicketingASP.Models.DTOs
@model TeamDto
@{
    ViewData["Title"] = Model.Name;
    var members = ViewBag.Members as List<TeamMemberDto> ?? new List<TeamMemberDto>();
    var users = ViewBag.Users as List<UserListDto> ?? new List<UserListDto>();
    // Filter out users who are already members
    var memberUserIds = members.Select(m => m.UserId).ToHashSet();
    var availableUsers = users.Where(u => !memberUserIds.Contains(u.Id)).ToList();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-start">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Teams</a></li>
                        <li class="breadcrumb-item active">@Model.Name</li>
                    </ol>
                </nav>
                <h1 class="h3">@Model.Name</h1>
                @if (!Model.IsActive)
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to deactivate this team?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Team Details -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Team Details</h5>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt>Description</dt>
                            <dd>@Model.Description</dd>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <dt>Email</dt>
                            <dd><a href="mailto:@Model.Email">@Model.Email</a></dd>
                        }
                        <dt>Members</dt>
                        <dd>@Model.MemberCount members</dd>
                        <dt>Status</dt>
                        <dd>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Team Members -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Team Members (@members.Count)</h5>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                        <i class="bi bi-plus-circle me-1"></i> Add Member
                    </button>
                </div>
                <div class="card-body">
                    @if (members.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Joined</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in members)
                                    {
                                        <tr>
                                            <td>@member.DisplayName</td>
                                            <td>@member.Email</td>
                                            <td>
                                                @if (member.IsTeamLead)
                                                {
                                                    <span class="badge bg-primary">Team Lead</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Member</span>
                                                }
                                            </td>
                                            <td>@member.JoinedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <form method="post" asp-action="RemoveMember" asp-route-id="@Model.Id" asp-route-userId="@member.UserId" onsubmit="return confirm('Remove this member from the team?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No team members yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Member Modal -->
<div class="modal fade" id="addMemberModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="AddMember" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Add Team Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="userId" class="form-label">User</label>
                        <select class="form-select" name="userId" id="userId" required>
                            <option value="">Select a user...</option>
                            @foreach (var user in availableUsers)
                            {
                                <option value="@user.Id">@user.DisplayName (@user.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="isTeamLead" id="isTeamLead" value="true">
                        <label class="form-check-label" for="isTeamLead">Team Lead</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Member</button>
                </div>
            </form>
        </div>
    </div>
</div>
